{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Create publish directory",
      "type": "process",
      "command": "mkdir",
      "args": ["publish"]
    },
    {
      "label": "Archive dist",
      "type": "process",
      "command": "zip",
      "args": ["-r", "publish/dist.zip", "dist", "-x", "*.DS_Store"]
    },
    {
      "label": "Archive source",
      "type": "process",
      "command": "zip",
      "args": ["-r", "publish/Shikiplayer.zip", ".", "-x", "*.DS_Store", "dist/*", "publish/*"]
    },

    {
      "label": "Build Firefox",
      "type": "process",
      "command": "node",
      "args": ["build.js", "firefox"],
      "group": {"kind": "build"},
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "clear": true
      }
    },
    {
      "label": "Build Release Firefox",
      "type": "process",
      "command": "node",
      "args": ["build.js", "firefox", "--release"],
      "group": {"kind": "build"},
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "clear": true
      }
    },
    {
      "label": "Publish Firefox",
      "dependsOn": ["Build Release Firefox", "Create publish directory", "Archive dist", "Archive source"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },

    {
      "label": "Build Userscript",
      "type": "process",
      "command": "node",
      "args": ["build.js", "userscript"],
      "group": {"kind": "build"},
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "clear": true
      }
    },
    {
      "label": "Build Release Userscript",
      "type": "process",
      "command": "node",
      "args": ["build.js", "userscript", "--release"],
      "group": {"kind": "build"},
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "clear": true
      }
    },

    {
      "label": "Build Chrome",
      "type": "process",
      "command": "node",
      "args": ["build.js", "chrome"],
      "group": {"kind": "build"},
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "clear": true
      }
    },
    {
      "label": "Build Release Chrome",
      "type": "process",
      "command": "node",
      "args": ["build.js", "chrome", "--release"],
      "group": {"kind": "build"},
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "clear": true
      }
    },
    {
      "label": "Publish Chrome",
      "dependsOn": ["Build Release Chrome", "Create publish directory", "Archive dist"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
  ]
}